<config>
    <modules>
        <MercadoLibre_Items>
            <version>0.1.0</version>
        </MercadoLibre_Items>
    </modules>
    <frontend>
        <routers>
            <items>
                <use>standard</use>
                <args>
                    <module>MercadoLibre_Items</module>
                    <frontName>items</frontName>
                </args>
            </items>
        </routers>
        <layout>
            <updates>
                <items>
                    <file>items.xml</file>
                </items>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
			<items>
				<use>admin</use>
				<args>
					<module>MercadoLibre_Items</module>
					<frontName>items</frontName>
				</args>
			</items>
        </routers>
    </admin>
    <adminhtml>
		<menu>
			<items module="items">
				<title>MercadoLibre</title>
				<sort_order>71</sort_order>               
				<children>
					<items module="items">
						<title>Manage Items</title>
						<sort_order>10</sort_order>
						<action>items/adminhtml_items</action>
					</items>
					<orders module="items">
						<title>Manage Orders</title>
						<sort_order>20</sort_order>
						<action>items/adminhtml_items</action>
					</orders>
					<questions module="items">
						<title>Manage Questions</title>
						<sort_order>30</sort_order>
						<action>items/adminhtml_items</action>
					</questions>
					<feedback module="items">
						<title>Manage Feedback</title>
						<sort_order>40</sort_order>
						<action>items/adminhtml_items</action>
					</feedback>
				</children>
			</items>
		</menu>
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<MercadoLibre_Items>
							<title>Items Module</title>
							<sort_order>10</sort_order>
						</MercadoLibre_Items>
					</children>
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<items>
					<file>items.xml</file>
				</items>
			</updates>
		</layout>
    </adminhtml>   
    <global>
        <models>
            <items>
                <class>MercadoLibre_Items_Model</class>
                <resourceModel>items_mysql4</resourceModel>
            </items>
            <items_mysql4>
                <class>MercadoLibre_Items_Model_Mysql4</class>
                <entities>
					<melicategoryupdate>
                        <table>meli_category_update</table>
                    </melicategoryupdate>
					<melicategories>
                        <table>meli_categories</table>
                    </melicategories>
					<melicategoryattributes>
                        <table>meli_category_attributes</table>
                    </melicategoryattributes>
					<melicategoryattributevalues>
                        <table>meli_category_attribute_values</table>
                    </melicategoryattributevalues>
                </entities>
            </items_mysql4>
        </models>
        <resources>
            <items_setup>
                <setup>
                    <module>MercadoLibre_Items</module>					
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </items_setup>
            <items_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </items_write>
            <items_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </items_read>
        </resources>
        <blocks>
            <items>
                <class>MercadoLibre_Items_Block</class>
            </items>
        </blocks>
        <helpers>
            <items>
                <class>MercadoLibre_Items_Helper</class>
            </items>
        </helpers>
    </global>
   <crontab>
        <jobs>
            <mercadolibre_items_getallcategoriesData>
                <schedule>
                    <cron_expr>0 0 * * 0</cron_expr><!-- every week run at 11PM -->
                </schedule>
                <run>
                    <model>mercadolibre_items/observer::getMLCatergoriesAllData</model>
                </run>
            </mercadolibre_items_getallcategoriesData>
            <mercadolibre_items_getallcategoriesattrData>
                <schedule>
                    <cron_expr>30 0 * * 0</cron_expr><!-- every week run at 11PM -->
                </schedule>
                <run>
                    <model>mercadolibre_items/observer::getMLCategoryAttributes</model>
                </run>
            </mercadolibre_items_getallcategoriesattrData>            
        </jobs>
    </crontab>
</config>